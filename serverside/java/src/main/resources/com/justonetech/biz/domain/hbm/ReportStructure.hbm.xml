<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.justonetech.biz.domain">
	<class
		name="ReportStructure"
		table="REPORT_STRUCTURE"
	>
		
		<meta attribute="sync-DAO">false</meta>
		<meta attribute="sync-jsp">true</meta>
		<meta attribute="sync-boolean">get</meta>
		<meta attribute="treeable">true</meta>
		<meta attribute="projectable">false</meta>
        <meta attribute="tableName">综合报表结构维护</meta>
        <meta attribute="tableComment">综合报表结构维护</meta>
            <meta attribute="sync-templatePatterns">tree\w*</meta>
        <meta attribute="sub-system">report</meta>

		<id
			name="id"
			type="java.lang.Long"
			column="ID"
		>
			<generator class="com.justonetech.core.orm.hibernate.LongIdGenerator"/>
		</id>

		<property
			name="name"
			column="NAME"
			type="string"
			not-null="false"
			length="200"
        >
            <meta attribute="ColumnName">名称</meta>
            <meta attribute="ColumnComment">名称</meta>
        </property>

		<property
			name="isSumAccu"
			column="IS_SUM_ACCU"
			type="java.lang.Boolean"
			not-null="false"
			length="1"
        >
            <meta attribute="ColumnName">是否计算累计值</meta>
            <meta attribute="ColumnComment">是否计算累计值</meta>
        </property>

		<property
			name="treeId"
			column="TREE_ID"
			type="string"
			not-null="false"
			length="255"
        >
            <meta attribute="ColumnName">树形层次</meta>
            <meta attribute="ColumnComment">树形层次</meta>
        </property>

		<property
			name="isLeaf"
			column="IS_LEAF"
			type="java.lang.Boolean"
			not-null="false"
			length="1"
        >
            <meta attribute="ColumnName">是否叶节点</meta>
            <meta attribute="ColumnComment">是否叶节点</meta>
        </property>

		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">创建时间</meta>
            <meta attribute="ColumnComment">创建时间</meta>
        </property>

		<property
			name="createUser"
			column="CREATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">创建用户名</meta>
            <meta attribute="ColumnComment">创建用户名</meta>
        </property>

		<property
			name="updateTime"
			column="UPDATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">更新时间</meta>
            <meta attribute="ColumnComment">更新时间</meta>
        </property>

		<property
			name="updateUser"
			column="UPDATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">更新用户名</meta>
            <meta attribute="ColumnComment">更新用户名</meta>
        </property>

        <property
                name="code"
                column="CODE"
                type="string"
                not-null="false"
                length="100"
                >
            <meta attribute="ColumnName">编码</meta>
            <meta attribute="ColumnComment">编码</meta>
        </property>

		<many-to-one
			name="reportDeptDefine"
			column="REPORT_DEPT_DEFINE_ID"
			class="ReportDeptDefine"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="parent"
			column="PARENT_ID"
			class="ReportStructure"
			not-null="false"
		>
		</many-to-one>
        <many-to-one
                name="measureUnit"
                column="MEASURE_UNIT_ID"
                class="com.justonetech.system.domain.SysCodeDetail"
                not-null="false"
                >
        </many-to-one>

        <many-to-one
                name="version"
                column="VERSION_ID"
                class="ReportStructureVer"
                not-null="false"
                >
        </many-to-one>

		<set name="reportStructures" inverse="true" order-by="TREE_ID">
			<key column="PARENT_ID"/>
			<one-to-many class="ReportStructure"/>
		</set>

		<set name="reportMonthDetails" inverse="true">
			<key column="REPORT_STRUCTURE_ID"/>
			<one-to-many class="ReportMonthDetail"/>
		</set>

	</class>	
    <query name="reportstructure_all_data_query">
        <![CDATA[FROM ReportStructure]]>
    </query>
</hibernate-mapping>