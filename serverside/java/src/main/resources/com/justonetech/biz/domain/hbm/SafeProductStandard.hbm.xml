<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.justonetech.biz.domain">
	<class
		name="SafeProductStandard"
		table="SAFE_PRODUCT_STANDARD"
	>
		
		<meta attribute="sync-DAO">false</meta>
		<meta attribute="sync-jsp">true</meta>
		<meta attribute="sync-boolean">get</meta>
		<meta attribute="treeable">true</meta>
		<meta attribute="projectable">false</meta>
        <meta attribute="tableName">安全生产标准</meta>
        <meta attribute="tableComment">安全生产标准</meta>
            <meta attribute="sync-templatePatterns">tree\w*</meta>
        <meta attribute="sub-system">safe</meta>

		<id
			name="id"
			type="java.lang.Long"
			column="ID"
		>
			<generator class="com.justonetech.core.orm.hibernate.LongIdGenerator"/>
		</id>

		<property
			name="year"
			column="YEAR"
			type="integer"
			not-null="false"
			length="4"
        >
            <meta attribute="ColumnName">年份</meta>
            <meta attribute="ColumnComment">年份</meta>
        </property>

		<property
			name="itemNo"
			column="ITEM_NO"
			type="integer"
			not-null="false"
			length="3"
        >
            <meta attribute="ColumnName">序号</meta>
            <meta attribute="ColumnComment">序号</meta>
        </property>

		<property
			name="itemName"
			column="ITEM_NAME"
			type="string"
			not-null="false"
			length="1000"
        >
            <meta attribute="ColumnName">检查项名称</meta>
            <meta attribute="ColumnComment">检查项名称</meta>
        </property>

		<property
			name="score"
			column="SCORE"
			type="integer"
			not-null="false"
			length="5"
        >
            <meta attribute="ColumnName">分数</meta>
            <meta attribute="ColumnComment">分数</meta>
        </property>

		<property
			name="isLeaf"
			column="IS_LEAF"
			type="java.lang.Boolean"
			not-null="false"
			length="1"
        >
            <meta attribute="ColumnName">是否叶节点</meta>
            <meta attribute="ColumnComment">是否叶节点</meta>
        </property>

		<property
			name="treeId"
			column="TREE_ID"
			type="string"
			not-null="false"
			length="200"
        >
            <meta attribute="ColumnName">树形层次</meta>
            <meta attribute="ColumnComment">树形层次</meta>
        </property>

		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">创建时间</meta>
            <meta attribute="ColumnComment">创建时间</meta>
        </property>

		<property
			name="createUser"
			column="CREATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">创建用户名</meta>
            <meta attribute="ColumnComment">创建用户名</meta>
        </property>

		<property
			name="updateTime"
			column="UPDATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">更新时间</meta>
            <meta attribute="ColumnComment">更新时间</meta>
        </property>

		<property
			name="updateUser"
			column="UPDATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">更新用户名</meta>
            <meta attribute="ColumnComment">更新用户名</meta>
        </property>

		<many-to-one
			name="parent"
			column="PARENT_ID"
			class="SafeProductStandard"
			not-null="false"
		>
		</many-to-one>
	

		<set name="safeProductStandards" inverse="true">
			<key column="PARENT_ID"/>
			<one-to-many class="SafeProductStandard"/>
		</set>

		<set name="safeProductCheckItems" inverse="true">
			<key column="PRODUCT_STANDARD_ID"/>
			<one-to-many class="SafeProductCheckItem"/>
		</set>

	</class>	
    <query name="safeproductstandard_all_data_query">
        <![CDATA[FROM SafeProductStandard]]>
    </query>
</hibernate-mapping>