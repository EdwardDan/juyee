<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.justonetech.sys">
	<author>justonetech</author>
	<namespace>sys</namespace>

	<!-- 系统字典 -->
	<entity name="Dictionary" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="dictionaryId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createTime" type="Date" />
		<column name="modifiedTime" type="Date" />


		<!-- Other fields -->

		<column name="code" type="String" /><!--编码 -->
		<column name="name" type="String" /><!--名称 -->
		<column name="isLeaf" type="boolean" /><!--叶节点 -->
		<column name="sortNo" type="int" /><!--排序号 -->
		<column name="desc" type="String" /><!--备注 -->
		<column name="tag" type="String" /><!--特殊标记 -->
		<column name="isValid" type="boolean" /><!--是否有效 -->
		<column name="treePath" type="String" /><!--树结构地址 -->
		<column name="sortPath" type="String" /><!--树结构排序号 -->
		<column name="customContent" type="String" /><!--自定义字段 -->
		<column name="parentId" type="long" /><!-- 父亲ID -->

		<!-- Order -->

		<order>
			<order-column name="sortPath" order-by="asc" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupIdAndCode" return-type="Dictionary">
			<finder-column name="groupId" />
			<finder-column name="code" />
		</finder>

		<finder name="GroupIdAndParentId" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="parentId" />
		</finder>

		<finder name="ParentIdAndIsValid" return-type="Collection">
			<finder-column name="parentId" />
			<finder-column name="isValid" />
		</finder>

	</entity>
	<entity name="SmsPlatform" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="smsPlatformId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createTime" type="Date" />
		<column name="modifiedTime" type="Date" />


		<!-- Other fields -->

		<column name="messageContent" type="String" /><!--消息内容 -->
		<column name="sender" type="String" /><!--发送人 -->
		<column name="internalRecipient" type="String" /><!--内部接收人 -->
		<column name="siteRecipient" type="String" /><!--工地接收人 -->
		<column name="phoneNumber" type="String" /><!--手机号码 -->
		<column name="isSendMessages" type="boolean" /><!--是否发送短信 -->
		<column name="sendTime" type="Date" /><!--发送时间 -->
		<column name="isSent" type="boolean" /><!--是否已发送 -->
		<column name="sendDetails" type="String" /><!--发送明细 -->
		<column name="temporarySendPerson" type="String" /><!--临时接收人 -->
		<column name="SiteManager" type="String" /><!--工地管理人 -->

		<!-- Order -->


	</entity>


</service-builder>