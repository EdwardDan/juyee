<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.justonetech.leo">
	<author>fanqi</author>
	<namespace>jtjs</namespace>
	<!-- 执法人员证件 -->
	<entity name="LEOCertificate" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="certificateId" type="String" primary="true" /><!-- 证件编号 -->

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Business fields -->
		<column name="xm" type="String" /><!-- 姓名 -->
		<column name="zjlx" type="String" /><!-- 证件类型 -->
		<column name="yxq" type="Date" /><!-- 有效期 -->
		<column name="fzrq" type="Date" /><!-- 发证日期 -->
	</entity>
	<!-- 执法人员培训 -->
	<entity name="LEOTraining" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="trainingId" type="long" primary="true" /><!-- 培训Id -->

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Business fields -->
		<column name="zjbh" type="String"/><!-- 执法人员证件编号 -->
		<column name="pxsj" type="String" /><!-- 培训时间 -->
		<column name="xcjysj" type="Date" /><!-- 下次教育时间 -->
		<column name="pxnr" type="Date" /><!-- 培训内容 -->
		
		<!-- Finder methods -->
		<finder name="Zjbh" return-type="Collection">
			<finder-column name="zjbh"></finder-column>
		</finder>
	</entity>
</service-builder>