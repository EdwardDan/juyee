<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>asset-viewer</portlet-name>
		<display-name>资源查看器</display-name>
		<portlet-class>
			com.justonetech.portal.portlet.AssetViewerPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/portlet/asset-viewer/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/portlet/asset-viewer/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<portlet-info>
			<title>资源查看器</title>
			<short-title>Asset Viewer</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>custom-login</portlet-name>
		<display-name>自定义登录</display-name>
		<portlet-class>
			com.justonetech.portal.portlet.CustomLoginPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/portlet/custom-login/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/portlet/custom-login/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<portlet-info>
			<title>自定义登录</title>
			<short-title>Custom Login</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
</portlet-app>